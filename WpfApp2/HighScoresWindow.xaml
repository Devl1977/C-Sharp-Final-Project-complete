<Window x:Class="MemoryGame.HighScoresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="High Scores" Height="300" Width="400">
    <Grid>
        <!-- High Scores Label at the top of the window -->
        <TextBlock Text="Players with the quickest times:" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>

        <!-- Area to display the high scores, you can place a ListBox or other controls here -->
        <ListBox Name="HighScoresListBox" VerticalAlignment="Center" Margin="10"/>
        <!-- Button to clear high scores -->
        <Button Name="ClearButton" Content="Clear High Scores" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Width="150" Height="30" Click="ClearButton_Click"/>
    </Grid>
</Window>