<Window x:Class="MemoryGame.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Over" Height="300" Width="400"
        WindowStartupLocation="CenterOwner" Background="Black">
    <Grid>
        <!-- Sad Face Emoji -->
        <TextBlock Text="😢"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="100"
                   Foreground="Red"/>

        <!-- "You Lose" Message -->
        <TextBlock Name="GameOverText"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontSize="28"
                   Foreground="Red"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   Text="You Lose!" />
    </Grid>
</Window>